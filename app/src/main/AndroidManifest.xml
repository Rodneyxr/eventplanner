<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cs3773.com.eventplanner" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="22" />
    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".ChattApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activities.LoginActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustResize|stateVisible" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.CalendarActivity"
            android:label="@string/title_activity_calendar" >
        </activity>
        <activity
            android:name=".activities.CreateEventActivity"
            android:label="@string/title_activity_event" >
        </activity>
        <activity
            android:name=".activities.ChatActivity"
            android:label="@string/title_activity_chat" >
        </activity>
        <activity
            android:name=".activities.AccountInfoActivity"
            android:label="@string/title_activity_account_info" >
        </activity>
        <activity
            android:name=".activities.CreateAccountActivity"
            android:label="@string/title_activity_create_account" >
        </activity>
        <activity
            android:name=".activities.CreateTeamActivity"
            android:label="@string/title_activity_create_team" >
        </activity>
        <activity
            android:name=".activities.EventActivity"
            android:label="@string/title_activity_create_event" >
        </activity>
    </application>

</manifest>
